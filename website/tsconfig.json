{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "resolveJsonModule": true,
        "baseUrl": "src",
        "jsx": "react-jsx",
        "paths": {
            "@config": ["config.ts"],
            "@content/*": ["content/*"],
            "@pages/*": ["pages/*"]
        },
        "types": ["astro/client"]
    },
    "include": [".astro/types.d.ts", "**/*"],
    "exclude": ["dist"]
}
